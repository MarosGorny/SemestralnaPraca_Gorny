<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/generalInfoTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Run"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dateOfWorkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="date"
                android:minHeight="48dp"
                android:textAlignment="center"
                tools:text="8.6.2022" />

            <TextView
                android:id="@+id/startTimeOfWorkout"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:inputType="time"
                android:minHeight="48dp"
                android:textAlignment="center"
                tools:text="15:33" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:orientation="vertical">


            <TextView
                android:id="@+id/timeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/timeSpendWorkout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:inputType="time"
                android:textAlignment="center"
                tools:text="2:01:56" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stat1_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distanceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="km"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/distanceStats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="23.42"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stat2_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="min/km"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/stats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="time"
                android:textAlignment="center"
                tools:text="6:00" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>