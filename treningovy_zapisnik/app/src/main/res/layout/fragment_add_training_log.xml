<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".trainingList.trainingLogAdd.AddTrainingLog">

    <TextView
        android:id="@+id/add_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        android:text="Activity"
        android:textAppearance="?attr/textAppearanceHeadline4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type_activity_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:gravity="center|start"
            android:text="Type"
            android:textAppearance="?attr/textAppearanceHeadline4"  />

        <RadioGroup
            android:id="@+id/activity_options"
            android:checkedButton="@id/option_run"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/option_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run"
                android:textAppearance="?attr/textAppearanceBody1"
                />

            <RadioButton
                android:id="@+id/option_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bike"
                android:textAppearance="?attr/textAppearanceBody1"
                />

            <RadioButton
                android:id="@+id/option_swim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swim"
                android:textAppearance="?attr/textAppearanceBody1"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_activity_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:gravity="center|start"
            android:text="Time"
            android:textAppearance="?attr/textAppearanceHeadline4"  />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Select Time"
            android:textAppearance="?attr/textAppearanceBody1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_activity_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:gravity="center|start"
            android:text="Date"
            android:textAppearance="?attr/textAppearanceHeadline4"  />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="Select Date" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distance_activity_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:text="Distance"
            android:autoSizeTextType="uniform"
            android:gravity="center|start"
            android:textAppearance="?attr/textAppearanceHeadline4"  />

        <EditText
            android:id="@+id/distance_input_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:hint="distance of your workout"
            android:autoSizeTextType="uniform"
            android:gravity="center|bottom"
            android:inputType="numberDecimal"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/duration_activity_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:gravity="center|start"
            android:text="Duration"
            android:hint="hh:mm:ss"
            android:textAppearance="?attr/textAppearanceHeadline4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker_hour"
                android:layout_width="32dp"
                android:layout_height="48dp"
                app:np_dividerColor="@android:color/transparent"
                app:np_height="180dp"
                app:np_itemSpacing="10dp"
                app:np_textSize="14sp"
                app:np_max="23"
                app:np_min="0"
                app:np_order="descending"
                app:np_value="0"
                app:np_wheelItemCount="1"
                app:np_width="64dp"
                app:np_wrapSelectorWheel="false">

            </com.shawnlin.numberpicker.NumberPicker>
            <TextView
                android:id="@+id/distance_hour_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:maxLines="1"
                android:text=":" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker_minutes"
                android:layout_width="32dp"
                android:layout_height="48dp"
                app:np_dividerColor="@android:color/transparent"
                app:np_height="180dp"
                app:np_itemSpacing="10dp"
                app:np_max="59"
                app:np_min="0"
                app:np_textSize="14sp"
                app:np_order="descending"
                app:np_value="0"
                app:np_wheelItemCount="1"
                app:np_width="64dp"
                app:np_wrapSelectorWheel="false" />
            <TextView
                android:id="@+id/distance_minute_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:maxLines="1"
                android:text=":" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker_seconds"
                android:layout_width="32dp"
                android:layout_height="48dp"
                app:np_dividerColor="@android:color/transparent"
                app:np_height="180dp"
                app:np_itemSpacing="10dp"
                app:np_textSize="14sp"
                app:np_max="59"
                app:np_min="0"
                app:np_order="descending"
                app:np_value="0"
                app:np_wheelItemCount="1"
                app:np_width="64dp"
                app:np_wrapSelectorWheel="false"/>

            <TextView
                android:id="@+id/distance_second_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:gravity="start|bottom"
                android:textColor="@color/black"
                android:maxLines="1"
                android:text="hh:mm:ss" />

        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/button_done"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="Done"
        android:textAppearance="?attr/textAppearanceButton" />

</LinearLayout>